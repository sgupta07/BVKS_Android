<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.iskcon.bvks.ui.home.HomeFragmentV2">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:paddingBottom="@dimen/default_8dp"
        android:paddingTop="@dimen/default_8dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimary">

        <Spinner
            android:id="@+id/spinner_home_fragment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="32dp"
            android:textColor="#ffffff"
            android:visibility="gone"
            android:text="Recently played"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"
            tools:text="Public"/>
    </LinearLayout>

    <include layout="@layout/fragment_lecturelist"/>

</LinearLayout>